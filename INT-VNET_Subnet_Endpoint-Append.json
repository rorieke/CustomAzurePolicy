{
    "parameters": {
        "endpoint": {
            "type": "Array",
            "defaultValue": [
                "Microsoft.AzureActiveDirectory",
                "Microsoft.AzureCosmosDB",
                "Microsoft.EventHub",
                "Microsoft.KeyVault",
                "Microsoft.ServiceBus",
                "Microsoft.Sql",
                "Microsoft.Storage",
                "Microsoft.Web"
            ]
        }
    },
    "policyRule": {
        "if": {
            "allOf": [{
                    "field": "type",
                    "equals": "Microsoft.Network/virtualNetworks"
                },
                {
                    "field": "Microsoft.Network/virtualNetworks/subnets[*].name",
                    "notEquals": "default"
                },
                {
                    "anyOf": [{
                            "not": {
                                "field": "Microsoft.Network/virtualNetworks/subnets[*].serviceEndpoints[*].service",
                                "equals": "[parameters('endpoint')[0]]"
                            }
                        },
                        {
                            "not": {
                                "field": "Microsoft.Network/virtualNetworks/subnets[*].serviceEndpoints[*].service",
                                "equals": "[parameters('endpoint')[1]]"
                            }
                        }
                    ]
                }
            ]
        },
        "then": {
            "effect": "append",
            "details": [{
                    "field": "Microsoft.Network/virtualNetworks/subnets[*].serviceEndpoints[*]",
                    "value": {
                        "service": "[parameters('endpoint')[0]]",
                        "locations": [
                            "[field('location')]"
                        ]
                    }
                },
                {
                    "field": "Microsoft.Network/virtualNetworks/subnets[*].serviceEndpoints[*]",
                    "value": {
                        "service": "[parameters('endpoint')[1]]",
                        "locations": [
                            "[field('location')]"
                        ]
                    }
                }
            ]
        }
    }
}